-- // LOADING SCREEN \\ --

local LoadingGui = Instance.new("ScreenGui")
LoadingGui.IgnoreGuiInset = true
LoadingGui.ResetOnSpawn = false
LoadingGui.Parent = game.CoreGui

local Frame = Instance.new("Frame")
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Frame.Size = UDim2.new(1, 0, 1, 0)
Frame.Parent = LoadingGui

local TextLabel = Instance.new("TextLabel")
TextLabel.Size = UDim2.new(1, 0, 1, 0)
TextLabel.BackgroundTransparency = 1
TextLabel.Text = "Loading Shadow Hub..."
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.TextScaled = true
TextLabel.Font = Enum.Font.GothamBold
TextLabel.Parent = Frame

task.delay(5, function()
    LoadingGui:Destroy()

    -- // MAIN SHADOW HUB SCRIPT \\ --

    -- Load Kavo UI Library
    local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

    -- Create UI Window
    local Window = Library.CreateLib("Shadow Hub V1.00", "Midnight")

    -- GLOBAL TAB
    local GlobalTab = Window:NewTab("üåê Global")
    local GlobalSection = GlobalTab:NewSection("Player Tweaks")

    -- WalkSpeed Slider
    GlobalSection:NewSlider("WalkSpeed", "Change your WalkSpeed", 100, 16, function(s)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = s
    end)

    -- JumpPower Slider
    GlobalSection:NewSlider("JumpPower", "Change your JumpPower", 150, 50, function(j)
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = j
    end)

    -- Infinite Jump Toggle
    getgenv().InfJump = false
    GlobalSection:NewToggle("Infinite Jump", "Toggle infinite jump on/off", function(state)
        getgenv().InfJump = state
    end)

    game:GetService("UserInputService").JumpRequest:Connect(function()
        if getgenv().InfJump then
            game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
        end
    end)

    -- ‚úÖ NOCLIP TOGGLE (Go Through Walls)
    getgenv().NoClip = false
    GlobalSection:NewToggle("NoClip", "Toggle NoClip (walk through walls)", function(state)
        getgenv().NoClip = state
    end)

    game:GetService("RunService").Stepped:Connect(function()
        if getgenv().NoClip then
            for _, part in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                if part:IsA("BasePart") and part.CanCollide == true then
                    part.CanCollide = false
                end
            end
        end
    end)
end)
